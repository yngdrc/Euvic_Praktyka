<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/allHeroesFragment">

    <fragment
        android:id="@+id/allHeroesFragment"
        android:name="com.euvic.praktyka_kheller.ui.main.AllHeroesFragment"
        android:label="AllHeroesFragment" >
        <action
            android:id="@+id/action_allHeroesFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.euvic.praktyka_kheller.ui.details.DetailsFragment"
        android:label="DetailsFragment" >
        <action
            android:id="@+id/action_detailsFragment_to_allHeroesFragment"
            app:destination="@id/allHeroesFragment" />
    </fragment>
</navigation>